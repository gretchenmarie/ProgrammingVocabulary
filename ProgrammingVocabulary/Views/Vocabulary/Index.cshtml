@model IEnumerable<ProgrammingVocabulary.Models.Vocabulary>

@{
    ViewData["Title"] = "Index";
}

<h2>All Vocabulary</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Word)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Definition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Language)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Word)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Definition)
            </td>
            <td>
                <a href=" @Html.DisplayFor(modelItem => item.Link)" target="_blank">@Html.DisplayFor(modelItem => item.Link)</a>
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Language.Name)
            </td>
            <td>
            <td>
                <a asp-action="FavoriteVocabulary" asp-route-id="@item.VocabularyId" class="navbar-brand">Save</a>
              
                <a asp-action="Details" asp-route-id="@item.VocabularyId"class="navbar-brand">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.VocabularyId"class="navbar-brand">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
